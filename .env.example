# Avatar Configuration
# Minimum size for avatars (in pixels)
AVATAR_MIN=1
# Maximum size for avatars (in pixels, large values might lead to slow response time or DoS)
AVATAR_MAX=512
# Default size for avatars when no size is specified (in pixels)
AVATAR_DEFAULT=160

# 3D Render Configuration
# Minimum scale for 3D rendered skins
RENDER_MIN=1
# Maximum scale for 3D rendered skins (large values might lead to slow response time or DoS)
RENDER_MAX=10
# Default scale for 3D rendered skins when no scale is specified
RENDER_DEFAULT=6

# Storage Directories
# Directory where face images are kept (must have trailing "/")
FACE_DIR=./images/faces/
# Directory where helm images are kept (must have trailing "/")
HELM_DIR=./images/helms/
# Directory where skin images are kept (must have trailing "/")
SKIN_DIR=./images/skins/
# Directory where rendered skin images are kept (must have trailing "/")
RENDER_DIR=./images/renders/
# Directory where cape images are kept (must have trailing "/")
CAPE_DIR=./images/capes/

# Caching Configuration
# Seconds until we will check if user's skin changed (should be > 60 to comply with Mojang's rate limit)
CACHE_LOCAL=1200
# Seconds until browser will request image again
CACHE_BROWSER=3600
# If true, redis is flushed on start (use this to avoid issues when you have persistent redis but ephemeral storage)
EPHEMERAL_STORAGE=false
# Used for information on the front page (set to true if using Cloudflare CDN)
CLOUDFLARE=false

# Redis Configuration
# URL of your redis server
REDIS_URL=redis://localhost:6379

# Server Configuration
# Port to listen on
PORT=3000
# IP address to bind to
BIND=0.0.0.0
# Milliseconds until connection to Mojang is dropped
EXTERNAL_HTTP_TIMEOUT=2000
# Enable debug logging and editing index page
DEBUG=false
# Set to false if you use an external logger that provides timestamps
LOG_TIME=false
# Rate limit per second for outgoing requests to the Mojang session server
# Requests exceeding this limit are skipped and considered failed
SESSIONS_RATE_LIMIT=

# Sponsor Configuration (optional)
# Sponsor sidebar content
SPONSOR_SIDE=
# Sponsor top-right content
SPONSOR_TOP_RIGHT=
